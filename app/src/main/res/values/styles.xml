    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="activity_my_detail_left_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_main_text2</item>
    </style>

    <style name="activity_my_detail_right_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minWidth">220dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/gray_buttom_text</item>

    </style>

    <style name="divider_wn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_line</item>

    </style>

    <style name="LoadingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="evaluate_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/black_main_text2</item>
        <item name="android:textSize">@dimen/text_size_large_16</item>
    </style>

    <style name="evaluate_item_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_buttom_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_large_13</item>
    </style>

    <style name="course_llt_style">
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="course_label_style">
        <item name="android:textColor">@color/gray_buttom_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="course_text_style">
        <item name="android:textColor">@color/gray_buttom_text</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:text">加载中...</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="exam_text_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/gray_buttom_text</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="customDialog2" parent="@style/customDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="course_play_num_style">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>




    <style name="myBtn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
    </style>


</resources>
